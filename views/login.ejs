<%- include('layout.ejs') %>
<div class="max-w-md mx-auto mt-20 p-6 bg-white dark:bg-gray-800 rounded-lg shadow">
  <h1 class="text-2xl mb-4">Login Required</h1>
  <% if (error) { %>
    <p class="text-red-500 mb-4"><%= error %></p>
  <% } %>
  <form method="POST" action="/login">
    <input type="text" name="username" placeholder="Username" class="w-full p-3 mb-4 border rounded">
    <input type="password" name="password" placeholder="Password" class="w-full p-3 mb-4 border rounded">
    <button type="submit" class="bg-blue-600 text-white w-full p-3 rounded">Login</button>
  </form>
</div>
