<%- include('layout.ejs') %>
<h1 class="text-3xl mb-6">Search Videos</h1>
<form action="/search" method="GET" class="mb-8">
  <input type="text" name="q" value="<%= query %>" placeholder="Enter keyword..." class="p-3 rounded-l w-full md:w-96 border" required>
  <button type="submit" class="bg-blue-600 text-white p-3 rounded-r">Go</button>
</form>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <% results.forEach(v => { %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
      <a href="/video?id=<%= v.id %>">
        <img src="<%= v.thumb %>" alt="<%= v.title %>" class="w-full h-48 object-cover">
        <div class="p-4">
          <p class="font-bold text-sm truncate"><%= v.title %></p>
          <p class="text-xs text-gray-500"><%= v.duration %></p>
        </div>
      </a>
    </div>
  <% }) %>
</div>
